!for i in {0..255}; do printf "\e[48;5;%dm%3d\e[0m " "$i" "$i"; if (( i == 15 )) || (( i > 15 )) && (( (i-15) % 6 == 0 )); then printf "\n"; fi; done

*background: black
*foreground: white
*VT100*background: black
*VT100*foreground: white

!black
*color0: black
*color8: gray10
*VT100*color0: black
*VT100*color8: gray10
!red
*color1: red
*color9: firebrick
*VT100*color1: red
*VT100*color9: firebrick
!green
*color2: SpringGreen3
*color10: LightGreen
*VT100*color2: SpringGreen3
*VT100*color10: LightGreen
!yellow
*color3: gold1
*color11: DarkOrange3
*VT100*color3: gold1
*VT100*color11: DarkOrange3
!blue
*color4: blue3
*color12: RoyalBlue
*VT100*color4: blue3
*VT100*color12: RoyalBlue
!magenta
*color5: maroon
*color13: purple
*VT100*color5: maroon
*VT100*color13: purple
!cyan
*color6: cyan3
*color14: cyan4
*VT100*color6: cyan3
*VT100*color14: cyan4
!white
*color7: grey80
*color15: white
*VT100*color7: grey80
*VT100*color15: white


!Now included in fvwm config
!XClock*analog: false
!XClock*buffer: true
!XClock*update: 1
!XClock*borderWidth: 0
!XClock*font: -bitstream-*-bold-r-*-33-240-*
!XClock*font: l-medium-r-normal--0-0-0-0-p-0-iso8859-2
!XClock*font: -misc-fixed-medium-r-normal--15-140-75-75-c-90-iso8859-2
!XClock*font: -misc-fixed-medium-r-normal--10-70-100-100-c-60-iso8859-1
!xlsfonts
!xcolorsel
!xrdb -merge .Xresources
!xfontsel
!xfd -fn fname
!xfd -fa faceName
!fc-match mono
!fc-list
!!appres xterm
!!fontmatrix
!xterm -report-fonts
!fc-list :scalable=true:spacing=mono: family
!!xterm -fa "faceName the font you want"

!xterm -u8
!only xterm and urxvt support unicode
!xterm -report-fonts is the most accurate display of font info.
!*faceName specifies the modern truetype font and overrides *font
!*font specifies the older XLFD bitmap font
!To remove *faceName setting and use *font,
!  run xrdb without the -merge option.
xterm*utf8: 1
XTerm*termName: xterm-256color
!xterm*faceName: Anonymous Pro
!See shelscripts/scriptSetup.sh for font installs.
!xterm*faceName: SourceCodePro
!xterm*faceName: JetBrainsMonoNerdFont
!use iso10646(universal char set) because 8859 is legacy.
!Nullify *faceName to use *font
xterm*faceName:
!this font is by far the cleanest!
xterm*font: -misc-fixed-medium-r-semicondensed-*-13-120-75-75-c-60-iso10646-*
! -fa faceName (family) -fn font resource name defaults to 'fixed'.
!xterm*packedFont: true
!xterm*renderFont: false
!xterm*initialFont: JetBrainsMonoNLNerdFontMono-Regular
!xterm*scaleHeight: 1.1

!xterm*faceName: DejaVuSansCondensed
!xterm*faceName: DejaVuSerifCondensed
!xterm*faceSize: 8.0
!xterm*boldFont: JetBrainsMonoNLNerdFontMono-SemiBold
*cursorTheme: cross_hair
*pointerShape: cross_hair
*pointerColor: black
*pointerColorBackground: white
